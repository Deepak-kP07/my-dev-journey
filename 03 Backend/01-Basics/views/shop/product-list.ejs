<%- include('../includes/head.ejs') %>
<body>
    <header>
         <%- include ('../includes/nav.ejs') %>
    </header>
    <main style="padding: 2rem; max-width: 1400px; margin: 0 auto;">
        <h1 style="text-align: center; color: #1f2937; margin-bottom: 0.5rem; font-size: 2.5rem;">All Products</h1>
        <p style="text-align: center; color: #6b7280; margin-bottom: 3rem; font-size: 1.1rem;">Discover our amazing collection</p>
        
        <% if (prods && prods.length > 0 ) { %>
            <ul style="
                display: flex; 
                flex-wrap: wrap; 
                gap: 2rem; 
                padding: 0; 
                margin: 0;
                justify-content: center;
            ">
                <% prods.forEach(product => { %>
                    <li style="
                        list-style: none;
                        background: linear-gradient(135deg, #f8fafc 0%, #e0e7ff 100%);
                        margin: 0;
                        padding: 2rem 1.5rem;
                        border: 2px solid #6366f1;
                        border-radius: 1.5rem;
                        box-shadow: 0 10px 25px rgba(99,102,241,0.1);
                        width: 280px;
                        min-height: 100px;
                        display: flex;
                        flex-direction: column;
                        justify-content: space-between;
                        transition: all 0.3s ease;
                        cursor: pointer;
                        position: relative;
                        overflow: hidden;
                    "
                    onmouseover="this.style.transform='translateY(-8px)'; this.style.boxShadow='0 20px 40px rgba(99,102,241,0.2)'"
                    onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 10px 25px rgba(99,102,241,0.1)'"
                    >
                        <div style="
                            position: absolute;
                            top: -50%;
                            right: -50%;
                            width: 100px;
                            height: 100px;
                            background: radial-gradient(circle, rgba(99,102,241,0.1) 0%, transparent 70%);
                            border-radius: 50%;
                        "></div>
                        
                        <div style="position: relative; z-index: 2;">
                            <h2 style="
                                font-size: 1.5rem; 
                                color: #3730a3; 
                                margin-bottom: 1rem;
                                font-weight: 600;
                                line-height: 1.3;
                            "><%= product.title %></h2>
                            
                            <div style="
                                display: flex;
                                align-items: center;
                                gap: 0.5rem;
                                margin-top: auto;
                            ">
                                <span style="
                                    font-size: 0.9rem; 
                                    color: #6b7280;
                                ">Price:</span>
                                <span style="
                                    font-weight: bold; 
                                    color: #16a34a;
                                    font-size: 1.3rem;
                                    background: linear-gradient(135deg, #16a34a, #22c55e);
                                    -webkit-background-clip: text;
                                    -webkit-text-fill-color: transparent;
                                    background-clip: text;
                                ">$<%= product.price %></span>
                            </div>
                        </div>
                        
                        <div style="
                            position: absolute;
                            bottom: 0;
                            left: 0;
                            right: 0;
                            height: 3px;
                            background: linear-gradient(90deg, #6366f1, #8b5cf6, #a855f7);
                            transform: scaleX(0);
                            transition: transform 0.3s ease;
                        " class="card-accent"></div>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <div style="
                text-align: center;
                padding: 4rem 2rem;
                background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
                border-radius: 1rem;
                border: 2px dashed #cbd5e1;
            ">
                <h3 style="color: #64748b; font-size: 1.5rem; margin-bottom: 1rem;">No Products Available</h3>
                <p style="color: #94a3b8; font-size: 1.1rem;">Check back later for new arrivals!</p>
            </div>
        <% } %>
    </main>
    
    <style>
        li:hover .card-accent {
            transform: scaleX(1) !important;
        }
        
        @media (max-width: 768px) {
            li {
                width: 100% !important;
                max-width: 400px !important;
            }
            
            main {
                padding: 1rem !important;
            }
        }
    </style>
    
<%- include('../includes/end.ejs') %>